{
  "hosting": {
    "public": "public",

    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],

    "rewrites": [
      {
        "source": "/netdiag",
        "destination": "/media/netdiag.png"
      },
      {
        "source": "/resume",
        "destination": "/media/resume.pdf"
      }
    ],

    "headers" : [ {
      "source": "**",
      "headers" : [
        { "key" : "Access-Control-Allow-Origin", "value" : "null" },
        { "key" : "X-Frame-Options", "value" : "deny" },
        { "key" : "X-Content-Type-Options", "value" : "nosniff" },
        { "key" : "X-XSS-Protection", "value" : "1; mode=block" },
        { "key": "Referrer-Policy", "value": "no-referrer" },
        { "key": "Permissions-Policy", "value": "Permissions-Policy: microphone=()" },
        {"key": "Content-Security-Policy", "value": "upgrade-insecure-requests; block-all-mixed-content; disown-opener;"}
      ]
    }],

    "cleanUrls": true,

    "trailingSlash": false
  }
}
