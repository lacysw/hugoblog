{
  "hosting": {
    "public": "public",

    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],

    "rewrites": [
      {
        "source": "/netdiag",
        "destination": "/media/netdiag.png"
      },
      {
        "source": "/resume",
        "destination": "/media/resume.pdf"
      }
    ],

    "headers" : [ {
      "source": "**",
      "headers" : [
        { "key" : "Access-Control-Allow-Origin", "value" : "null" },
        { "key" : "X-Frame-Options", "value" : "deny" },
        { "key" : "X-Content-Type-Options", "value" : "nosniff" },
        { "key" : "X-XSS-Protection", "value" : "1; mode=block" },
        { "key": "Referrer-Policy", "value": "no-referrer" },
        { "key": "Permissions-Policy", "value": "Permissions-Policy: geolocation=*" },
        {"key": "Content-Security-Policy", "value": "default-src 'none'; script-src 'self'; style-src 'report-sample' 'self'; object-src 'none'; base-uri 'self'; connect-src 'self'; font-src 'self'; frame-src 'self'; img-src 'self' https://www.googletagmanager.com/; manifest-src 'self'; media-src 'self'; worker-src 'self'; form-action 'self'; frame-ancestors 'self';"}
      ]
    }],

    "cleanUrls": true,

    "trailingSlash": false
  }
}
